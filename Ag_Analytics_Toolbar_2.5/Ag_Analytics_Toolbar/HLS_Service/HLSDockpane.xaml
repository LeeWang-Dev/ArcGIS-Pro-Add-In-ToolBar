                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" 
                                     Text="{Binding CoordinateSystem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
